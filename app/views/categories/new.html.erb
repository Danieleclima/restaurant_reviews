<h1> Create new category</h1>

<%= form_for @category do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %> </br>

    <%= f.label :Restaurant %>
    <%= f.collection_select :restaurant_id, @user.restaurants, :id, :name, include_blank: false %>

    <%= f.hidden_field :user_id, :value => @user.id %>

    <%= f.submit :create %>

<% end %>